@{
    ViewData["Title"] = "SignIn";
}
@model FreeCourse.Web.Models.SigninInput

<div class="row" >
<div class="col-md-4 offset-4">

    <div class="card"> 
    
        <div class="card-body">

            <h5 class="card-title">User Login</h5>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
        
    </div>
</div>

</div>

<form asp-controller="Auth" asp-action="SignIn" method="post">
    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input type="text" value="fallien" asp-for="Username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span class="text-danger"  asp-validation-for="Username"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input type="password" value="1Parola7" asp-for="Password" class="form-control" id="exampleInputPassword1">
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="mb-3 form-check">
        <input asp-for="IsRemember" type="checkbox" class="form-check-input" id="exampleCheck1">
        <label asp-for="IsRemember" class="form-check-label" for="exampleCheck1"></label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>